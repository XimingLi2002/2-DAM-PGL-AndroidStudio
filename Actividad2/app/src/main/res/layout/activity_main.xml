<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="25dp"
    tools:layout_editor_absoluteY="80dp">

    <RadioGroup
        android:id="@+id/RG_ZonaEstadioGC"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_Informacion">

        <RadioButton
            android:id="@+id/RB_GradaNaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grada Naciente" />

        <RadioButton
            android:id="@+id/RB_GradaCurva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grada Curva" />

        <RadioButton
            android:id="@+id/RB_GradaSur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grada Sur" />

        <RadioButton
            android:id="@+id/RB_Tribuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tribuna" />
    </RadioGroup>

    <TextView
        android:id="@+id/TV_Informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="71dp"
        android:text="Eliga una de estas zonas:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CB_Abonado"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="100dp"
        android:text="Abonado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RG_ZonaEstadioGC" />
</androidx.constraintlayout.widget.ConstraintLayout>